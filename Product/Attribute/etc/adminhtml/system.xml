<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="enquery" translate="label" sortOrder="10">
            <label>Product Enquery</label>
        </tab>
        <section id="popup" translate="label" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Product Enquery</label>
            <tab>enquery</tab>
            <resource>Product_Attribute::popop_config</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>General Configuration</label>
                <field id="email_template" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="10" translate="label comment" type="select">
                    <label>Product Enquery Popup Email Template</label>
                    <source_model>Magento\Config\Model\Config\Source\Email\Template</source_model>
                <comment/>
                </field>
            </group>
        </section>
    </system>
</config>